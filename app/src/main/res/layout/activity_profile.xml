<?xml version="1.0" encoding="utf-8"?>
<!--Layout principal-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">
    <!--Primer Layout-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:baselineAligned="true"
        android:divider="@color/black"
        android:orientation="horizontal">

        <Button
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:fontFamily="@font/advent_pro_medium"
            android:onClick="volver"
            android:shadowColor="#FFFFFF"
            android:text="Volver"
            android:textAllCaps="false"

            android:textColor="#6dc0e4"
            android:textSize="16dp"
            android:textStyle="bold"
            app:backgroundTint="#00FFFFFF"
            app:iconTint="#FFFFFF"></Button>

        <TextView
            android:layout_width="81dp"
            android:layout_height="40dp"
            android:layout_marginHorizontal="50dp"
            android:fontFamily="@font/advent_pro_medium"
            android:text="Perfil"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="16dp"
            android:textStyle="bold"></TextView>
    </LinearLayout>
    <!--termina primer Layout-->
    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"  />


    <ImageView
        android:id="@+id/foto_perfil"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:scaleType="centerCrop"
        android:screenReaderFocusable="true"
        android:src="@drawable/ic_baseline_image_24dp" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">
    <Button
        android:id="@+id/boton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:fontFamily="@font/advent_pro_medium"
        android:shadowColor="#FFFFFF"
        android:text="Cambiar foto de perfil"
        android:textAllCaps="false"
        android:textColor="#6dc0e4"
        android:textSize="16dp"
        app:backgroundTint="#00FFFFFF"
        app:iconTint="#FFFFFF"
        android:onClick="cambiar"
        ></Button>
</LinearLayout>

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:baselineAligned="true"
        android:divider="@color/black"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:fontFamily="@font/advent_pro_medium"
            android:text="Nombre"
            android:textAlignment="gravity"
            android:textColor="#000000"
            android:textSize="16dp"></TextView>

        <TextView
            android:id="@+id/nombre"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="280dp"
            android:fontFamily="@font/advent_pro_medium"
            android:text="Carlos"
            android:textAlignment="gravity"
            android:textColor="#6dc0e4"
            android:textSize="16dp"></TextView>

    </LinearLayout>

    <View
        android:id="@+id/divider4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"  />

    <!--tercer Layout-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:baselineAligned="true"
        android:divider="@color/black"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:fontFamily="@font/advent_pro_medium"
            android:text="Apellido"
            android:textAlignment="gravity"
            android:textColor="#000000"
            android:textSize="16dp"></TextView>

        <TextView
            android:id="@+id/apellido"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="280dp"
            android:fontFamily="@font/advent_pro_medium"
            android:text="Cordero"
            android:textAlignment="gravity"
            android:textColor="#6dc0e4"
            android:textSize="16dp"></TextView>

    </LinearLayout>

    <View
        android:id="@+id/divider5"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:baselineAligned="true"
        android:divider="@color/black"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:fontFamily="@font/advent_pro_medium"
            android:text="Usuario"
            android:textAlignment="gravity"
            android:textColor="#000000"
            android:textSize="16dp"></TextView>

        <TextView
            android:id="@+id/usuario"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="230dp"
            android:fontFamily="@font/advent_pro_medium"
            android:text="carlossteven9xd"
            android:textAlignment="gravity"
            android:textColor="#6dc0e4"
            android:textSize="16dp"></TextView>

    </LinearLayout>

    <View
        android:id="@+id/divider6"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"  />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:baselineAligned="true"
        android:divider="@color/black"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:fontFamily="@font/advent_pro_medium"
            android:text="Correo electrónico"
            android:textAlignment="gravity"
            android:textColor="#000000"
            android:textSize="16dp"></TextView>

        <TextView
            android:id="@+id/correo"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="95dp"
            android:fontFamily="@font/advent_pro_medium"
            android:text="carlossteven9xd@gmail.com"
            android:textAlignment="gravity"
            android:textColor="#6dc0e4"
            android:textSize="16dp"></TextView>

    </LinearLayout>

    <View
        android:id="@+id/divider7"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"  />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:baselineAligned="true"
        android:divider="@color/black"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:fontFamily="@font/advent_pro_medium"
            android:text="Número telefónico"
            android:textAlignment="gravity"
            android:textColor="#000000"
            android:textSize="16dp"></TextView>

        <TextView
            android:id="@+id/telefono"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="175dp"
            android:fontFamily="@font/advent_pro_medium"
            android:text="+19294084848"
            android:textAlignment="gravity"
            android:textColor="#6dc0e4"
            android:textSize="16dp"></TextView>

    </LinearLayout>

    <View
        android:id="@+id/divider8"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"  />


</LinearLayout>