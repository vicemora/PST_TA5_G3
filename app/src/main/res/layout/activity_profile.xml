<?xml version="1.0" encoding="utf-8"?>
<!--Layout principal-->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">
        <!--Primer Layout-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:baselineAligned="true"
            android:divider="@color/black"
            android:orientation="horizontal">

            <Button
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:fontFamily="@font/advent_pro_medium"
                android:onClick="volver"
                android:shadowColor="#FFFFFF"
                android:text="Volver"
                android:textAllCaps="false"

                android:textColor="#6dc0e4"
                android:textSize="16dp"
                android:textStyle="bold"
                app:backgroundTint="#00FFFFFF"
                app:iconTint="#FFFFFF"></Button>

            <TextView
                android:layout_width="81dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="38dp"
                android:fontFamily="@font/advent_pro_medium"
                android:text="Perfil"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="16dp"
                android:textStyle="bold"></TextView>

            <Button
                android:id="@+id/cerrar_sesion"
                android:layout_width="144dp"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:fontFamily="@font/advent_pro_medium"
                android:onClick="cerrar"
                android:shadowColor="#FFFFFF"
                android:text="Cerrar sesión"
                android:textAllCaps="false"

                android:textColor="#FB0404"
                android:textSize="16dp"
                android:textStyle="bold"
                app:backgroundTint="#00FFFFFF"
                app:iconTint="#FFFFFF" />
        </LinearLayout>
        <!--termina primer Layout-->
        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black" />


        <ImageView
            android:id="@+id/foto_perfil"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:scaleType="centerCrop"
            android:screenReaderFocusable="true"
            app:srcCompat="@drawable/ic_baseline_image_24dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/boton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:fontFamily="@font/advent_pro_medium"
                android:onClick="cambiar"
                android:shadowColor="#FFFFFF"
                android:text="Cambiar foto de perfil"
                android:textAllCaps="false"
                android:textColor="#6dc0e4"
                android:textSize="16dp"
                app:backgroundTint="#00FFFFFF"
                app:iconTint="#FFFFFF"></Button>
        </LinearLayout>

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:baselineAligned="true"
            android:divider="@color/black"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/advent_pro_medium"
                android:gravity="start|center_vertical"
                android:text="Nombre"
                android:textColor="#000000"
                android:textSize="16dp"></TextView>

            <TextView
                android:id="@+id/nombre"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="0dp"
                android:fontFamily="@font/advent_pro_medium"
                android:gravity="center_vertical|end"
                android:text="Carlos"
                android:textColor="#6dc0e4"
                android:textSize="16dp"></TextView>

        </LinearLayout>

        <View
            android:id="@+id/divider4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black" />

        <!--tercer Layout-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:baselineAligned="true"
            android:divider="@color/black"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/advent_pro_medium"
                android:gravity="start|center_vertical"
                android:text="Apellido"
                android:textColor="#000000"
                android:textSize="16dp"></TextView>

            <TextView
                android:id="@+id/apellido"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/advent_pro_medium"
                android:gravity="center_vertical|end"
                android:text="Cordero"
                android:textColor="#6dc0e4"
                android:textSize="16dp"></TextView>

        </LinearLayout>

        <View
            android:id="@+id/divider5"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:baselineAligned="true"
            android:divider="@color/black"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/advent_pro_medium"
                android:gravity="start|center_vertical"
                android:text="Usuario"
                android:textColor="#000000"
                android:textSize="16dp"></TextView>

            <TextView
                android:id="@+id/usuario"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/advent_pro_medium"
                android:gravity="center_vertical|end"
                android:text="carlossteven9xd"
                android:textColor="#6dc0e4"
                android:textSize="16dp"></TextView>

        </LinearLayout>

        <View
            android:id="@+id/divider6"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:baselineAligned="true"
            android:divider="@color/black"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/advent_pro_medium"
                android:gravity="start|center_vertical"
                android:text="Correo electrónico"
                android:textColor="#000000"
                android:textSize="16dp"></TextView>

            <TextView
                android:id="@+id/correo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/advent_pro_medium"
                android:gravity="center_vertical|end"
                android:text="carlossteven9xd@gmail.com"
                android:textColor="#6dc0e4"
                android:textSize="16dp"></TextView>

        </LinearLayout>

        <View
            android:id="@+id/divider7"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:baselineAligned="true"
            android:divider="@color/black"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/advent_pro_medium"
                android:gravity="start|center_vertical"
                android:text="Número telefónico"
                android:textColor="#000000"
                android:textSize="16dp"></TextView>

            <TextView
                android:id="@+id/telefono"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/advent_pro_medium"
                android:gravity="center_vertical|end"
                android:text="+19294084848"
                android:textColor="#6dc0e4"
                android:textSize="16dp"></TextView>

        </LinearLayout>

        <View
            android:id="@+id/divider8"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:divider="@drawable/rec_celeste"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/cat_btn"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/buttonsBarHeight"
            android:layout_weight="1"
            android:background="@color/white"
            android:cropToPadding="false"
            android:scaleType="center"
            app:srcCompat="@drawable/ic_category" />

        <ImageButton
            android:id="@+id/home_btn"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/buttonsBarHeight"
            android:layout_weight="1"
            android:background="@color/white"
            android:scaleType="center"
            app:srcCompat="@drawable/ic_home" />

        <ImageButton
            android:id="@+id/car_btn"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/buttonsBarHeight"
            android:layout_weight="1"
            android:background="@color/white"
            android:scaleType="center"
            app:srcCompat="@drawable/ic_car" />

        <ImageButton
            android:id="@+id/profile_btn"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/buttonsBarHeight"
            android:layout_weight="1"
            android:background="@color/white"
            android:scaleType="center"
            app:srcCompat="@drawable/ic_person_celeste" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>