<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Categorias">

    <TableLayout
        android:layout_width="374dp"
        android:layout_height="597dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/cat1btn"
                android:layout_width="160dp"
                android:layout_height="300dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:onClick="btnCategoria1"
                android:text="Romance"
                android:textSize="22sp"
                android:fontFamily="@font/advent_pro_medium"
                android:textStyle="bold"
                app:backgroundTint="#FC223B" />

            <Button
                android:id="@+id/cat4btn"
                android:layout_width="160dp"
                android:layout_height="300dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:onClick="btnCategoria4"
                android:text="Fantasia"
                android:textSize="22sp"
                android:fontFamily="@font/advent_pro_medium"
                android:textStyle="bold"
                app:backgroundTint="#45A2E5" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="404dp">

            <Button
                android:id="@+id/cat2btn"
                android:layout_width="160dp"
                android:layout_height="300dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:onClick="btnCategoria2"
                android:text="Infantil"
                android:textSize="22sp"
                android:fontFamily="@font/advent_pro_medium"
                android:textStyle="bold"
                app:backgroundTint="#FFB508" />

            <Button
                android:id="@+id/cat3btn"
                android:layout_width="160dp"
                android:layout_height="300dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:onClick="btnCategoria3"
                android:text="Clasicos"
                android:textSize="22sp"
                android:fontFamily="@font/advent_pro_medium"
                android:textStyle="bold"
                app:backgroundTint="#56B12E" />
        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>